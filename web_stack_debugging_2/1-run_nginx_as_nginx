#!/usr/bin/env bash
# Configure Nginx to run as nginx user and listen on port 8080

sed -i 's/#user www-data;/user nginx;/' /etc/nginx/nginx.conf
sed -i 's/worker_processes 4;/worker_processes auto;/' /etc/nginx/nginx.conf
sed -i 's/listen 80 default_server;/listen 8080 default_server;' /etc/nginx/sites-available/default
sed -i 's/listen \[::\]:80 default_server ipv6only=on;/isten [::]:8080 default_server ipv6only=on;' /etc/nginx/sites-available/default

# Fix permissions 
chmod 755 /etc/nginx
chmod 644 /etc/nginx/nginx.conf

# Fix directory ownership
chown -R nginx:nginx /var/log/nginx
chown -R nginx:nginx /var/lib/nginx
mkdir -p /run/nginx
chown -R nginx:nginx /run/nginx

# Test configuration
nginx -t

# Delete any stall files
sudo rm -f /run/nginx.pid

# Stop any running program
service nginx stop
service apache2 stop

# Restart Nginx 
service nginx restart 
