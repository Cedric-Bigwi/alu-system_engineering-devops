#!/usr/bin/env bash
# Script that installs and configures Nginx to serve a page containing "Holberton School"

# Update package list
sudo apt-get update -y

# Check if nginx is already installed
if ! dpkg -l | grep -q nginx; then
    sudo apt-get install -y nginx
fi

# Ensure nginx is enabled and running
sudo systemctl enable nginx
sudo systemctl start nginx

# Create the web root directory if it doesn't exist
sudo mkdir -p /var/www/html

# Write the required content to the index page
echo "Holberton School" | sudo tee /var/www/html/index.nginx-debian.html > /dev/null

# Restart nginx to apply changes
sudo systemctl restart nginx
