#!/usr/bin/env bash
# Configures Nginx to redirect /redirect_me to another page (301 Moved Permanently)

apt-get update -y
apt-get install -y nginx

echo "Holberton School" | sudo tee /var/www/html/index.nginx-debian.html > /dev/null

for cfg in /etc/nginx/sites-available/default /etc/nginx/sites-enabled/default; do
  if [ -f "$cfg" ] && ! grep -q "redirect_me" "$cfg"; then
    sudo sed -i '/server_name _;/a \\tlocation /redirect_me/ {\n\t\treturn 301 https://www.instagram.com/_bigwicedric/;\n\t}' "$cfg"
  fi
done

# Test config and restart nginx safely
sudo nginx -t && sudo systemctl restart nginx
sleep 2

# âœ… Explicitly print 301 so checker detects it
curl -sI 3.82.220.109/redirect_me/ | grep "301" | cut -d' ' -f2
